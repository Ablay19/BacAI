# Environment Variables Template
# Copy this to .env and fill in your values

# API Keys for AI Services
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Railway Configuration
RAILWAY_TOKEN=your_railway_token
RAILWAY_PROJECT_NAME=bacai-model-service

# Cloudflare Configuration
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id

# Vercel Configuration
VERCEL_TOKEN=your_vercel_token
VERCEL_ORG_ID=your_vercel_org_id
VERCEL_PROJECT_ID=your_vercel_project_id

# Database (Free tier options)
# Option 1: Supabase
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Option 2: Neon (PostgreSQL)
NEON_DATABASE_URL=your_neon_database_url

# Option 3: PlanetScale (MySQL)
PLANETSCALE_URL=your_planetscale_url

# Redis (Upstash free tier)
UPSTASH_REDIS_REST_URL=your_upstash_redis_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token

# Configuration
NODE_ENV=development
PORT=3000
MODEL_SERVICE_URL=https://your-service.railway.app
API_SERVICE_URL=https://your-api.your-subdomain.workers.dev

# Model Configuration
PRIMARY_MODEL=Qwen/Qwen2-8B-Instruct
FALLBACK_MODEL=microsoft/DialoGPT-medium
MAX_TOKENS=2048
TEMPERATURE=0.7
MODEL_CACHE_TTL=3600

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://bacai.vercel.app

# Monitoring (Optional)
SENTRY_DSN=your_sentry_dsn_for_error_tracking
LOG_LEVEL=info

# Feature Flags
ENABLE_ANALYTICS=false
ENABLE_USER_TRACKING=false
ENABLE_ADVANCED_FEATURES=true