# Google Lens AI Agent Environment Configuration

# ==============================================================
# Google Cloud Vision API Configuration
# ==============================================================
GOOGLE_APPLICATION_CREDENTIALS=/app/config/gcp-credentials.json
# Get your credentials from: https://console.cloud.google.com/apis/credentials

# ==============================================================
# SerpAPI Configuration (for web search)
# ==============================================================
SERPAPI_API_KEY=your_serpapi_key_here
# Get your API key from: https://serpapi.com/

# ==============================================================
# Ollama Configuration (Local AI Processing)
# ==============================================================
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=llava
# Alternative models: llava:13b, bakllava, llava-llama3, etc.

# ==============================================================
# Notification Configuration
# ==============================================================
NTFY_TOPIC=google-lens-agent
NTFY_SERVER=https://ntfy.sh
# Get your topic from: https://ntfy.sh (or use any custom topic name)

# ==============================================================
# Application Configuration
# ==============================================================
LOG_LEVEL=info
MAX_CONCURRENT_TASKS=5
CACHE_SIZE=1000
PROCESSING_TIMEOUT=30m
TERMUX_API=false

# ==============================================================
# Database Configuration (Optional)
# ==============================================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=google_lens
POSTGRES_USER=postgres
POSTGRES_PASSWORD=secure_password_change_me

# ==============================================================
# Redis Configuration (for caching and task queue)
# ==============================================================
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=
REDIS_DB=0

# ==============================================================
# Worker Configuration
# ==============================================================
WORKER_TYPE=background_processor
WORKER_CONCURRENCY=2
WORKER_REPLICAS=2

# ==============================================================
# Monitoring Configuration
# ==============================================================
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3000
GRAFANA_PASSWORD=admin

# ==============================================================
# Storage Configuration
# ==============================================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin_change_me
STORAGE_TYPE=local

# ==============================================================
# Security Configuration
# ==============================================================
API_KEY=your_api_key_here
JWT_SECRET=your_jwt_secret_here_make_it_long_and_random
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ==============================================================
# Performance Configuration
# ==============================================================
MAX_IMAGE_SIZE=10MB
MAX_BATCH_SIZE=50
PREPROCESSING_ENABLED=true
CACHING_ENABLED=true
COMPRESSION_ENABLED=true

# ==============================================================
# Development Configuration
# ==============================================================
DEBUG=false
DEV_MODE=false
MOCK_APIS=false